<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    tools:context=".Resources">
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contactView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0.05"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactView1"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/contact"
        app:layout_constraintBottom_toTopOf="@id/contactView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/contactImageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:tint="@color/white"
                android:contentDescription="contactPic1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactText1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                />
            <TextView
                android:id="@+id/contactText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hansa Yogendra"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintStart_toEndOf="@id/contactImageView1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactButton1"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/contactButton1"
                android:src="@drawable/call"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/contactText1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/round_button_style"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactView2"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/contactView1"
        app:layout_constraintBottom_toTopOf="@id/contactView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/contactImageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:tint="#AEEA00"
                android:contentDescription="contactPic2"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactText2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                />
            <TextView
                android:id="@+id/contactText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kevin Robin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintStart_toEndOf="@id/contactImageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactButton2"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/contactButton2"
                android:src="@drawable/call"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/contactText2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/round_button_style"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactView3"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/contactView2"
        app:layout_constraintBottom_toTopOf="@id/video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/contactImageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:tint="#FDD835"
                android:contentDescription="contactPic3"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactText3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                />
            <TextView
                android:id="@+id/contactText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Walker"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintStart_toEndOf="@id/contactImageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactButton3"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/contactButton3"
                android:src="@drawable/call"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/contactText3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/round_button_style"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/contactView3"
        app:layout_constraintBottom_toTopOf="@id/youtubeLink1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        />
<!--    https://www.youtube.com/watch?v=hI2TZW9H5iA-->
    <TextView
        android:id="@+id/youtubeLink1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DON'T START any DIET without watching this! - Dr.Pal"
        android:textColor="#1E88E5"
        android:autoLink="web"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/youtubeLink2"
        app:layout_constraintHorizontal_bias="0.1"
        />
    <!--https://www.youtube.com/watch?v=qyMA-vN3QwI-->
    <TextView
        android:id="@+id/youtubeLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to control mental functions - Hansa Yogendra"
        android:textColor="#1E88E5"
        android:autoLink="web"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/youtubeLink1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/youtubeLink3"
        app:layout_constraintHorizontal_bias="0.1"
        />
<!--    https://www.youtube.com/watch?v=StA5DOel7Pw-->
    <TextView
        android:id="@+id/youtubeLink3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This One Exercise Will Change Your Life, START FROM HERE! - Dr.Pal"
        android:textColor="#1E88E5"
        android:autoLink="web"
        android:textSize="20sp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/youtubeLink2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        />
</androidx.constraintlayout.widget.ConstraintLayout>